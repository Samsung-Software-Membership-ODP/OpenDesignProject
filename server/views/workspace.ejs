      return true;
    }

    function end(e) // 드래그 끝
    {
      e.dataTransfer.clearData("Data");
  //    e.target.style.backgroundColor = "red";
      return true;
    }
    function over(e) //컴포넌트가 타겟에 올라왔을 때 못올라오게할시 true
