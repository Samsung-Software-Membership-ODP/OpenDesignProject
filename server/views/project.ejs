<!Doctype html>
<html>
    <head>
        <title>Project View</title>
<!--        <link rel="stylesheet" type="text/css" href="main.css">-->
        <!-- bootstrap -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" >
        <!-- jquery -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="//cdn.jsdelivr.net/xeicon/1.0.4/xeicon.min.css">
        <link href='https://fonts.googleapis.com/css?family=Titillium+Web:400,200' rel='stylesheet' type='text/css'>
        <style>
            *{
                margin: 0 auto;
                font-family: 'Titillium Web', sans-serif;
            }
            
            #mainframe{
                background: #EBEBEC;
                height: 1000px;
                padding: 50px;
            }
            #main_nav{
/*                height: 120px;*/
                background: #003C6C;
            }
            #main_nav > ul{
                padding: 12px;
                margin-left: 20px;
                list-style: none;
            }
            #main_nav > ul > li{
                float: left;
                margin-right: 10px;
            }
            #main_nav > ul > li > a{
                text-decoration: none;
                color: dimgrey;
            }
            #main_nav > ul > li > a:hover{
                text-decoration: none;
                color: white;
            }
            #user_msg{
                float: right;
                margin-right: 20px;
                color: white;
                line-height: 42px;
            }
            .nav_title > h2{
                color: white;
                text-align: center;
            }
            .card{
                background: #ffffff;
                padding: 4px;
                padding-left: 20px;
                border-radius: 3px;
/*                height: 50px;*/
                width: 70%;
                margin-top: 20px;
            }
            .card:hover{
                border : 2px solid #003C6C;
            }
            .logo{
                color: white;
                margin-top: 0px;
                padding-top : 20px;
                padding-left : 20px;
                margin-bottom: 15px;
            }
            #sub_nav{
                padding-left: 40px;
                vertical-align: middle;
/*                height: 40px;*/
                background: white;
                border-bottom: 2px solid #003C6C;
            }
            
            #footer{
                background: #5D5D5D;
                height: 50px;
                padding-left: 100px;
            }
            #footer > h3{
                color: #B7B7B7;
                line-height: 50px;
            }
        </style>
        <script>

            var titles = "<%= titles %>".split(',');

            
            $(function(){
                $('#add').click(function(){
                    $('#myModal').modal();
                });
            });
            
            $(document).ready(function(){
                for(var i = 0; i < titles.length; i++){
                    $('#cardSection').append(
                        '<a href="/workspace"><div class="card"><h4>'+titles[i]+'</h4></div></a>'
                    );
                }
                
            });
        </script>
    </head>
    <body>
        <div id="main_nav">
            <h2 class="logo">Open Design Project</h2>
                <ul class="clearfix">
                    <li><a id="add" href="#"><i class="xi-plus xi-x">&nbsp;</i></br></a></li>
                    <li><a href="#"><i class="xi-trash xi-x">&nbsp;</i></br></a></li>
                </ul>  
        </div>
        <div id="sub_nav">
            <p><i class="xi-angle-right">&nbsp;</i> <%= user_name %> 님 접속을 환영합니다.</p>
        </div>
        
        <div id="mainframe">
            <div id="cardSection">
                
            </div>
        </div>
        <div id="footer">
            <h3>Open Design Project</h3>
        </div>

        <!-- Modal -->
        <form method="post">
            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Project 추가</h4>
                  </div>
                  <div class="modal-body">
                    <input name="input_project_name" type="text" class="form-control" placeholder="Prjoect Name">
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button id="btn_save" type="submit" class="btn btn-primary">Save changes</button>
                  </div>
                </div>
              </div>
            </div>
        </form>
    </body>
</html>